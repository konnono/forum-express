<div class="container" style="width:80vw">
  <div class="row" style="border: 1px solid grey;">
    <div class="d-flex align-items-center justify-content-center col-4">
      <img src="{{user_p.image}}" style="border-radius: 50%; max-width:20vw">
    </div>
    <div class="col-8">
      <h3 class="mt-3">{{user_p.name}}</h3>
      <p class="mt-2">{{user_p.email}}</p>
      {{#ifCond user_p.id user.id}}
      <a href="/users/{{user_p.id}}/edit" class="btn btn-primary mb-3">Edit</a>
      {{/ifCond}}
    </div>
  </div>
  <div class="row mt-3" style="border: 1px solid grey">
    <div class="col-12 my-3 pl-3 " style="border-bottom: 1px solid grey">
      {{countComments}} 已評論餐廳
    </div>
    <div class="displayRestaurant d-flex flex-wrap">
      {{#each comments}}
      <a href="/restaurants/{{this.Restaurant.id}}">
        <div class="card m-2" style="width: 15vh;">
          <img src="{{this.Restaurant.image}}" class="card-img-top">
          <div class="card-body">
            <p class="card-text">{{this.Restaurant.name}}
            </p>
          </div>
        </div>
      </a>
      {{/each}}
    </div>
  </div>
</div>